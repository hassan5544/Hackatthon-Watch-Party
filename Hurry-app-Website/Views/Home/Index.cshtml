<div class="container">
    @for (int i = 0; i < 10; i++)
    {
        if (i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-sm-4">
            <a href="@Url.Action("JoinParty", "Party")">
                <div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
                    <div class="card-header">Movie Title</div>
                    <div class="card-body">
                        <h4 class="card-title">Current Members</h4>
                        <p class="card-text">Length And other info</p>
                    </div>
                </div>
            </a>
        </div>
        if ((i + 1) % 3 == 0 || i == 9)
        {
            @:</div> 
        }
    }
</div>
